{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "types": ["bun-types"],
    "paths": {
      "@/*": ["./src/*"]
    },
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": ["src", "tests"]
}
